---
/**
 * CalloutPanel - Highlighted panel for important information
 * 
 * @param variant - Visual style (info, warning, success)
 * @param icon - Optional icon/emoji to display
 * @param title - Optional heading for the callout
 */
interface Props {
  variant?: 'info' | 'warning' | 'success' | 'neutral';
  icon?: string;
  title?: string;
  class?: string;
}

const { 
  variant = 'info',
  icon,
  title,
  class: className = ''
} = Astro.props;

const classes = [
  'callout-panel',
  `callout-panel--${variant}`,
  className
].filter(Boolean).join(' ');
---

<aside class={classes} role="complementary">
  {(icon || title) && (
    <div class="callout-panel__header">
      {icon && (
        <span class="callout-panel__icon" aria-hidden="true">{icon}</span>
      )}
      {title && (
        <h3 class="callout-panel__title">{title}</h3>
      )}
    </div>
  )}
  
  <div class="callout-panel__content">
    <slot />
  </div>
</aside>

<style>
  .callout-panel {
    padding: clamp(1.5rem, 4vw, 2rem);
    border-radius: var(--radius-lg);
    border: 1px solid;
    background: var(--color-surface);
    backdrop-filter: blur(10px);
  }

  .callout-panel__header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .callout-panel__icon {
    font-size: 1.5rem;
    line-height: 1;
  }

  .callout-panel__title {
    margin: 0;
    font-size: var(--text-lg);
    font-weight: var(--font-weight-semibold);
  }

  .callout-panel__content {
    display: grid;
    gap: 0.75rem;
  }

  .callout-panel__content > :first-child {
    margin-top: 0;
  }

  .callout-panel__content > :last-child {
    margin-bottom: 0;
  }

  /* Variants */
  .callout-panel--info {
    background: linear-gradient(
      135deg, 
      rgba(93, 225, 228, 0.08), 
      rgba(93, 225, 228, 0.03)
    );
    border-color: rgba(93, 225, 228, 0.3);
  }

  .callout-panel--info .callout-panel__title {
    color: var(--color-primary-bright);
  }

  .callout-panel--warning {
    background: linear-gradient(
      135deg, 
      rgba(251, 191, 36, 0.08), 
      rgba(251, 191, 36, 0.03)
    );
    border-color: rgba(251, 191, 36, 0.3);
  }

  .callout-panel--warning .callout-panel__title {
    color: #fde047;
  }

  .callout-panel--success {
    background: linear-gradient(
      135deg, 
      rgba(34, 197, 94, 0.08), 
      rgba(34, 197, 94, 0.03)
    );
    border-color: rgba(34, 197, 94, 0.3);
  }

  .callout-panel--success .callout-panel__title {
    color: #86efac;
  }

  .callout-panel--neutral {
    background: rgba(15, 23, 42, 0.55);
    border-color: var(--color-border);
  }

  @media (max-width: 640px) {
    .callout-panel {
      padding: 1.25rem;
    }

    .callout-panel__icon {
      font-size: 1.25rem;
    }
  }
</style>