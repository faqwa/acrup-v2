---
/**
 * StatusBadge - Project status indicator
 * 
 * @param status - Status type determining color/style
 * @param text - Optional custom text (defaults to formatted status)
 */
interface Props {
  status: 'early-idea' | 'active' | 'paused' | 'completed';
  text?: string;
}

const { status, text } = Astro.props;
const displayText = text || status.replace('-', ' ');
---

<span class={`status-badge status-${status}`}>
  {displayText}
</span>

<style>
  .status-badge {
    display: inline-block;
    padding: 0.35rem 0.85rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    white-space: nowrap;
    transition: all var(--transition-base);
  }

  /* Status variants */
  .status-early-idea {
    background: rgba(96, 165, 250, 0.15);
    color: #93c5fd;
    border: 1px solid rgba(96, 165, 250, 0.3);
  }

  .status-active {
    background: rgba(34, 197, 94, 0.15);
    color: #86efac;
    border: 1px solid rgba(34, 197, 94, 0.3);
  }

  .status-paused {
    background: rgba(251, 191, 36, 0.15);
    color: #fde047;
    border: 1px solid rgba(251, 191, 36, 0.3);
  }

  .status-completed {
    background: rgba(139, 92, 246, 0.15);
    color: #c4b5fd;
    border: 1px solid rgba(139, 92, 246, 0.3);
  }

  /* Hover effect for interactive contexts */
  a:hover .status-badge,
  button:hover .status-badge {
    transform: scale(1.05);
  }

  @media (max-width: 480px) {
    .status-badge {
      font-size: 0.75rem;
      padding: 0.3rem 0.7rem;
    }
  }
</style>